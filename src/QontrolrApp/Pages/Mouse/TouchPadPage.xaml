<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QontrolrApp.Pages.Mouse.TouchPadPage"
             Shell.NavBarIsVisible="True"
             BackgroundColor="#F5F5F5"
             Title="Touch Pad">

    <Grid 
        RowDefinitions="*, Auto"
        Padding="10">
        <!-- Touch Pad Area -->
        <GraphicsView 
            Grid.Row="0"
            x:Name="TouchPadView"
            HorizontalOptions="Fill"
            VerticalOptions="Fill"/>

        <!-- Control Buttons -->
            <Grid Grid.Row="1"
                Padding="10"
                ColumnDefinitions="*, Auto, *"
                ColumnSpacing="5"  
                Margin="10">

                <!-- Left Click -->
                <Frame Grid.Column="0"
                    CornerRadius="30"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center">
                    <Button x:Name="LeftClickButton"
                        Text="L"
                        FontSize="22"
                        TextColor="AliceBlue" 
                        BackgroundColor="Transparent"
                        Clicked="OnLeftClick"/>
                </Frame>

                <!-- Slider (Mouse Wheel) -->
                <Frame Grid.Column="1"
                    CornerRadius="30"
                    HasShadow="True"
                    Padding="10,0,10,0">
                    <Slider x:Name="MouseWheelSlider"
                        Maximum="100"
                        Minimum="-100"
                        Rotation="90"
                        Value="0"
                        ThumbColor="Transparent"
                        VerticalOptions="Center"
                        ValueChanged="OnMouseWheelScrolled"/>
                </Frame>

                <!-- Right Click -->
                <Frame Grid.Column="2"
                    CornerRadius="30"
                    HasShadow="True"
                    Padding="0">
                <Button x:Name="RightClickButton"
                        Text="R"
                        FontSize="22"
                        TextColor="AliceBlue"
                        BackgroundColor="Transparent"
                        Clicked="OnRightClick"/>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
