<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QontrolrApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QontrolrApp"
    xmlns:page="clr-namespace:QontrolrApp.Pages"
    xmlns:mouse_pages="clr-namespace:QontrolrApp.Pages.Mouse"
    Shell.FlyoutBehavior="Disabled"
    Title="SourisApp">

    <ShellContent
        Title="Scanner"
        ContentTemplate="{DataTemplate page:QRCodeReaderPage}"
        Route="ScannerPage" />

    <ShellContent
        Title="Touch Pad"
        ContentTemplate="{DataTemplate mouse_pages:TouchPadPage}"
        Route="TouchPadPage" />
</Shell>